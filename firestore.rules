rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
     match /reports/{document=**} {
      allow read: if request.auth == null;
      allow write: if false; // Deny all write operations for this collection
    }
    
    // Deny access to all other collections for anonymous users
    match /{document=**} {
       allow read, write: if request.auth != null;
    }
  }
}